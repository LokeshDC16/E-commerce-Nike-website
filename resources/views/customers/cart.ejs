<section class="cart py-16">
    <% if(session.cart) { %>
    <div class="order container mx-auto xl:w-1/2">
        <div class="flex item-center border-b border-gray-300 pb-4">
            <i class=" fa-solid fa-cart-shopping text-2xl" style="color: #000000;" alt="Cart"></i>
            <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
        </div>
        <div>
            <div class="shoes-list">

                <!--  -->

                <% for(let shoes of Object.values(session.cart.items)) { %>

                <div class="flex items-center my-8">
                    <img class="w-24" src="/img/products/<%= shoes.items.image %>" alt="img">
                    <div class="flex-1 ml-4">
                        <h1><%= shoes.items.name %></h1>
                        <span><%= shoes.items.category %></span>
                    </div>
                    <span class="flex-1"><%= shoes.qty %> Pcs</span>
                    <span class="font-bold text-lg">â‚¹ <%= shoes.items.price * shoes.qty %></span>
                </div>

                <% } %>

                <!--  -->

            </div>
            <hr>

            <!-- session.cart.totalPrice -->
            <div class="text-right py-4">  
                <div>
                    <span class="text-lg font-bold">Total Amount :</span>
                    <span class="amount text-2xl font-bold ml-2">â‚¹ <%= session.cart.totalPrice %></span>
                </div>
            </div>

            <!-- Phone , address -->
            <% if(user) { %>
            <div class="text-right">
                <form action="/orders" method="POST" class="mt-12">
                    <input name="phone" class="border border-orange-400 p-2 w-1/2 mb-4" type="number" placeholder="Phone number">
                    <input name="address" class="border border-orange-400 p-2 w-1/2" type="text" placeholder="Address">
                    <div>
                        <button class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6" type="submit">Buy Now</button>
                    </div>
                </form>
            </div>
            <% } else { %>
            <a href="/login" class="text-right inline-block cursor-pointer px-6 btn-primary px-6 py-2 rounded-full text-white font-bold mt-6">Login to continue</a>
            <% } %>
        </div>
    </div>

    <% } else { %>

    <!-- Empty cart -->
    <div class="empty-cart py-16">
        <div class="container mx-auto text-center">
            <h1 class="text-3xl font-bold mb-2">Cart Empty ðŸ˜•</h1>
            <p class="text-gray-500 text-lg mb-12">You havent ordered anything</p>
            <img class="w-1/4 h-1/4 mx-auto" src="/img/jordan.png" alt="empty-cart">
            <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">Go Back</a>
        </div>
    </div>

    <% } %>

    <!--  -->

</section>